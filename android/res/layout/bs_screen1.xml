<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bs_bg_screen1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/bs_img_width"
            android:layout_height="@dimen/bs_img_height"
            android:src="@drawable/boarding_screen1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bs_1_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bs_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/bs_desc_padding"
            android:paddingRight="@dimen/bs_desc_padding"
            android:text="@string/bs_1_desc"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bs_desc"
            android:gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>